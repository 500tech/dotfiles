# CLI Shortcuts
alias copyssh="pbcopy < ~/.ssh/id_rsa.pub"
alias reloadbash="source ~/.bash_profile"
alias reloaddns="dscacheutil -flushcache && sudo killall -HUP mDNSResponder"
alias aliases="cat ~/.aliases"
alias dotfiles="cd ~/dotfiles"
alias ls="ls -F"

# PHP
alias art="php artisan"
alias hs="homestead"

# Directories
alias sites="cd ~/Sites"
alias projects="sites && cd projects"
alias blog="projects && cd driesvints.com"
alias lio="projects && cd laravelio"

# BeatSwitch
alias bs="sites && cd beatswitch"
alias webapp="bs && cd web-app"
alias webappconfig="bs && cd web-app-config"
alias lock="bs && cd lock"

# Vagrant
alias v="vagrant global-status"
alias vup="vagrant up"
alias vhalt="vagrant halt"
alias vssh="vagrant ssh"
alias vrebuild="vagrant destroy --force && vagrant up"

# Git
alias gl="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
